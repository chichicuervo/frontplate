{
    "name": "frontplate",
    "version": "0.0.1",
    "main": "index.js",
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "cross-env NODE_ENV=production webpack --mode production --config config/client.webpack.js",
        "build:server": "cross-env NODE_ENV=production webpack --mode production --config config/server.webpack.js",
        "start:dev": "cross-env NODE_ENV=development nodemon --config config/dev.nodemon.json",
        "start:prod": "cross-env NODE_ENV=production nodemon --config config/prod.nodemon.json",
        "start": "npm run build && npm run start:prod"
    },
    "author": "Jason Belich <jason@belich.com>",
    "license": "UNLICENSED",
